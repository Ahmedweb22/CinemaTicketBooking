@model ActorsUpdateREsponseVM
<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h3 class="display-6">Edit Actor</h3>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label for=Name" class="form-label">Name</label>
                    <input class="form-control" placeholder="Enter category name" asp-for="Name"
                           onchange="previewImage(event)">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <textarea class="form-control" placeholder="Description" rows="5" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Img" class="form-label">Img </label>
                    <input type="file" class="form-control" name="img" placeholder="Enter actor image">
                 
                </div>
                <div class="mb-3">
                    <img id="preview"
                         src="~/img/actors_images/@Model.Img" alt="Current Image" class="img-thumbnail" />
                </div>

                <div class="mb-3">
                    <label for="MovieId" class="form-label">Movie</label>
                    <select class="form-select" asp-for="MovieId">
                        @foreach (var movie in Model.Movies)
                        {
                            <option value="@movie.Id">@movie.Name</option>
                        }
                    </select>
                </div>
        
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<script>
    function previewImage(event) {
    const input = event.target;
    const preview = document.getElementById('preview');
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function(e) {
            preview.src = e.target.result;
        }
        reader.readAsDataURL(input.files[0]);
    }
</script>
@section Scripts {
    <partial name="~/Views/Shared/_NotificationPartial.cshtml" />
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
