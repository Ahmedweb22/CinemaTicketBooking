@model MoviesVM

<div class="container">

    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h3 class="display-6">All Movies</h3>
        </div>
        <!-- Create -->
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Movie/Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
    </div>
    <section class="py-3 filter-bar">
        <div class="container">
            <div class="row" style="background-color: rgba(var(--bs-light-rgb), var(--bs-bg-opacity)) !important">
                <div class="col-md-6">
                    <form>
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" name="name" class="form-control me-2" placeholder="name..."
                                       value="@Model.FilterVM.Name" />
                            </div>

                            <div class="col-md-2">
                                <input type="text"  class="form-control me-2" placeholder="Min Price"  asp-for="FilterVM.MinPrice"/>
                            </div>


                            <div class="col-md-2">
                                <input type="text"  class="form-control me-2" placeholder="Max Price"  asp-for="FilterVM.MaxPrice"/>
                            </div>
                            <div class="col-md-2">
                                <select name="CategoryId" class="form-select">
                                    <option value="">All Categories</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        if (Model.FilterVM.CategoryId == category.Id)
                                        {
                                            <option value="@category.Id" selected>@category.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select name="CinemaId" class="form-select">
                                    <option value="">All Cinemas</option>
                                    @foreach (var cinema in Model.Cinemas)
                                    {
                                        if (Model.FilterVM.CinemaId == cinema.Id)
                                        {
                                            <option value="@cinema.Id" selected>@cinema.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@cinema.Id">@cinema.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2 mt-3">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

    </section>



    <div class="card shadow-sm">
        <div class="card-body p-0">

            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
						<th scope="col">Date</th>
                        <th scope="col">Category</th>
                        <th scope="col">Cinema</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Movies)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Date</td>
                            <td>
                                <span class="badge bg-secondary">@item.Category.Name</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.Cinema.Name</span>
                            </td>
                            @if (item.Status)
                            {
                                <td>
                                    <span class="badge bg-success">Active</span>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <span class="badge bg-secondary">Inactive</span>
                                </td>
                            }

                            <td>
                                <!-- Update -->
                                <a href="/Admin/Movie/Edit/@item.Id"
                                   class="btn btn-sm btn-outline-warning">
                                    Edit
                                </a>

                                <!-- Delete -->
                                <a href="/Admin/Movie/Delete/@item.Id"
                                   class="btn btn-sm btn-outline-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/Admin/Movie/Index?page=@(Model.CurrentPage - 1)">Previous</a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="page-item active">
                                <a class="page-link" href="/Admin/Movie/Index?page=@i">@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" href="/Admin/Movie/Index?page=@i">@i</a>
                            </li>
                        }
                    }
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/Admin/Movie/Index?page=@(Model.CurrentPage + 1)">Next</a>
                        </li>
                    }

                </ul>
            </nav>
        </div>
    </div>

</div>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const deleteLinks = document.querySelectorAll('a.btn-outline-danger');
        deleteLinks.forEach(function(link) {
            link.addEventListener('click', function(event) {
                event.preventDefault();
                const url = this.href;
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = url;
                    }
                });
            });
        });
    });
</script>